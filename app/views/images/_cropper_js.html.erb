<%= stylesheet_link_tag "justified.css" %>
<%= stylesheet_link_tag "JCrop.css" %>

<%= javascript_include_tag "justified.js" %>
<%= javascript_include_tag "JCrop.js" %>

<%= javascript_include_tag "smartcrop.js" %>
<script type="text/javascript">
 $(document).ready( function() {
   var gcd = function(a, b) {
     if ( ! b) {
       return a;
     }

     return gcd(b, a % b);
   };
   var mode = $("#image_variation_mode");

   $('#aspectRatioMenu li.item:first').addClass("active");

   if(mode){
     try {
       mode.val($('#aspectRatioMenu li.item:first')[0].id);
     } catch (err) {}
   }

   $('#aspectRatioMenu li.item').on('click', function (e) {
     if ($(this).attr("disabled") === "disabled"){
       return false;
     }
     var ref = $(this),
         data,
         aspectRatio;

     ref
       .addClass('active')
       .siblings('.item')
       .removeClass('active');

     data = ref.data();
     if (data.cropType === "smart") {

       var image = document.getElementById("cropbox");
       var width = 500;
       var height = 500;
       var aspectRatio = width / height;
       smartcrop.crop(image, {width, height}).then(function(result){
         console.log(result);
         result = result.topCrop;
         $('#cropbox').Jcrop({
           setSelect: [result.x, result.y, result.width + result.x, result.height + result.y],
           onSelect: update,
           onChange: update,
           boxHeight: 350,
           boxWidth: 750,
           aspectRatio: aspectRatio
         });
       });
       $("#image_variation_is_smart_cropped").val("true")
     } else {
       if (data.height > 0 && data.width > 0) {
         aspectRatio = data.width / data.height;
       } else {
         aspectRatio = 0;
       }

       $('#cropbox').Jcrop({
         setSelect: [0, 0, 420, 420],
         onSelect: update,
         onChange: update,
         boxHeight: 350,
         boxWidth: 750,
         aspectRatio: aspectRatio
       });
     }


     if(mode && this.id){
       mode.val(this.id);
     }

     e.preventDefault();
   });

   $('.protograph-social-crop-btn').on('click', function (e) {
     $('#navbarNav li').removeClass('active');
     var data = $(e.currentTarget).data();
     var tab = $('#navbarNav li'+ data.mode),
         tabData = tab.data(),
         aspectRatio;

     if (tabData.height > 0 && tabData.width > 0) {
       aspectRatio = tabData.width / tabData.height;
     } else {
       aspectRatio = 0;
     }

     tab.addClass('active');

     $('#cropbox').Jcrop({
       setSelect: [0, 0, 420, 420],
       onSelect: update,
       onChange: update,
       boxHeight: 350,
       boxWidth: 750,
       aspectRatio: aspectRatio
     });

     if(mode && tab.attr('id')){
       mode.val(tab.attr('id'));
     }

   });

   function update(coords) {

     if (!$('.jcrop-holder .protograph-crop-tooltip').length) {
       $('.jcrop-holder').append('<div class="protograph-crop-tooltip"></div>');
     }

     $('#image_variation_crop_x').val(coords.x);
     $('#image_variation_crop_y').val(coords.y);
     $('#image_variation_crop_w').val(coords.w);
     $('#image_variation_crop_h').val(coords.h);

     var str = "",
         width = Math.round(coords.w),
         height = Math.round(coords.h),
         aspectWidth = width / gcd(width, height),
         aspectHeight = height / gcd(width, height);

     if (coords.w > 0 && coords.h > 0) {
       str += (width + ' x ' + height);
       str += "  ";
       str += ('(' + Math.round(aspectWidth) + ':' + Math.round(aspectHeight) + ')');
     } else {
       str += ( width + ' x ' + height);
     }

     $('.protograph-crop-tooltip').html(str);
   };

   $('#cropbox').Jcrop({
     setSelect: [0, 0, 420, 420],
     onSelect: update,
     onChange: update,
     boxHeight: 350,
     boxWidth: 750,
     aspectRatio: ($('#aspectRatioMenu li.item.active').data().width / $('#aspectRatioMenu li.item.active').data().height)
   });

 });
</script>
