<div class="nine wide column">
  <%= render partial: "accounts/header" %>
  <div style="text-align: right;">
    <span id='invite_members'><a>Invite people</a></span>
    <% if @pending_invites_count != 0 %>
    &nbsp;&nbsp; | &nbsp;&nbsp;
    <%= link_to "Pending Invitations (#{@pending_invites_count})".html_safe, account_permission_invites_path(@account) %>
    <% end %>
  </div>
  <br/>
  <div class="ui very relaxed list" style="width: 100% !important;">
    <% @permissions.each do |permission| %>
        <div class="item">
          <img class="ui avatar image" src=<%=avatar_url(permission.user.email)%>>
          <div class="content">
            <div class="header">
              <%= permission.user.name %>
              <span style="float: right;">
                <% if permission.ref_role_slug != "owner" %>
                <div class="ui dropdown item">
                  <div class="text">
                    <%= permission.ref_role_slug.titleize %>
                    <i class="dropdown icon"></i>
                  </div>
                  <div class="menu">
                    <% RefRole.pluck(:slug).uniq.each do |r| %>
                    <% if permission.ref_role_slug != r %>
                    <%= link_to r, change_role_account_permission_path(@account, permission, r: r), class: "item" %>
                    <% end %>
                    <% end %>
                  </div>
                  <% else %>
                  <%= permission.ref_role_slug.titleize %>
                  <% end %>
                </span>
              </div>
              <div class="description">Last seen <%= time_ago_in_words(permission.user.current_sign_in_at) %> ago.</div>
            </div>
          </div>
        </div>
    <% end %>
    <%= paginate @permissions %>
  </div>
</div>
<%= render partial: "permission_invites/form" %>
<script>
  $('.ui.modal#platform_modal')
  .modal('attach events', '#invite_members', 'show');
</script>

<% #if current_user.id != permission.user_id %>
  <% #link_to "<i class='trash outline icon'></i>".html_safe, account_permission_path(@account, permission), method: :delete, data: { confirm: 'Are you sure?' } %>