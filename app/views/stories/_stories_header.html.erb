<%= content_for :page_title do %>          
    <li class="breadcrumb-item"><%= link_to "Stories", account_site_stories_path(@account, @site, folder_id: @folder.id), "data-turbolinks"=> false %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= truncate(@page.one_line_concept, length: 100, ommission: "..") %></li>  
<% end %>

<%= content_for :page_navigation do %>
      <li class="nav-item">
        <%= link_to "File", (action_name == "edit_write" ? "#" : edit_write_account_site_story_path(@account, @site, @page, folder_id: @page.folder_id)), class: (action_name == "edit_write" ? "nav-link active" : "nav-link"), "data-turbolinks" => "false" %>
      </li>
      <li class="nav-item">
        <%= link_to "Assemble", (action_name == "edit_assemble" ?  "#" : edit_assemble_account_site_story_path(@account, @site, @page, folder_id: @page.folder_id)), class: (action_name == "edit_assemble" ? "nav-link active" : "nav-link"), "data-turbolinks" => "false" %>
      </li>
      <li class="nav-item">
        <%= link_to "Package", (action_name == "edit_distribute" ? "#" :  edit_distribute_account_site_story_path(@account, @site, @page, folder_id: @page.folder_id)), class: (action_name == "edit_distribute" ? "nav-link active" : "nav-link"),"data-turbolinks" => "false" %>
      </li>
<% end %>

<%= stylesheet_link_tag "stories" %>
<%= javascript_include_tag "stories",'data-turbolinks-track': 'reload' %>