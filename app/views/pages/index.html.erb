<% if @pages.first.blank? %>
    <br/>
    <br/>
    <div class="blankslate blankslate-spacious">
        <% if @folder.is_trash %>
            <h3>There are no stories in the recycle bin.</h3>
        <% else %>
            <h3>No stories created yet.</h3>
            <p>Use the [+ Add a story] button on the top right.</p>
        <% end %>
    </div>
<% else %>
    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th>#
                </th>
                <th>Status
                </th>
                <th>Headline
                </th>
                <th>Last updated
                </th>
            </tr>
        </thead>
        <tbody>
            <% @pages.each do |d| %>                
                <tr>
                    <td class="hint">
                        <% if d.view_cast.present? %>
                        <%= d.view_cast.id.to_s %>
                        <% end %>
                    </td>
                    <td>
                    </td>
                    <td><%= link_to truncate(d.headline, length: 200, ommission: ".."), edit_account_site_page_path(@account, @site, d, folder_id: d.folder_id), "data-turbolinks"=> false  %>
                    </td>
                    <td class="hint">
                        <%= image_tag avatar_url(d.updator.email), width: "20px", class: "rounded" %>
                        <%= time_ago_in_words(d.updated_at) %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <%= paginate @pages, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
<% end %>