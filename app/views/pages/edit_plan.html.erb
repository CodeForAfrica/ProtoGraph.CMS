<%= render partial: "pages/edit_header" %>
<div class="row">
    <div class="col-sm-7" style="margin-left: auto; margin-right: auto; width: 540px;">
        <%= simple_form_for(@page, url: account_site_page_path(@account, @site, @page), method: :put) do |f| %>
                    <%= f.error_notification %>
                    <div class="form-inputs">
                        <%= f.input :description, label: "Describe the story in detail so the writer understands it better." %>
                        <div class="form-actions">
                          <%= f.button :submit, "Save" %>
                        </div>
                    </div>
        <% end %>
    </div>
    <div class="col-sm-4">
        <br/>
    </div>
</div>