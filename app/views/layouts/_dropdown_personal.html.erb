            <%= link_to '+ Add a card', new_account_site_folder_view_cast_path(@account, @site, @folder), data: {turbolinks: false}, class: "btn btn-sm btn-primary", style: "margin-top: 5px;" %>
        <% elsif controller_name == "pages" and action_name == "index" %>
            <%= link_to '+ Add a story', new_account_site_page_path(@account, @site, folder_id: @folder.id), data: {turbolinks: false}, class: "btn btn-sm btn-primary", style: "margin-top: 5px;" %>
