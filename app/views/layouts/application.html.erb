<!DOCTYPE html>
<html lang="en">
<head>
  <title>ProtoTYPE</title>
  <%= csrf_meta_tags %>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>
<body data-turbolinks=<%= (controller_name == "view_casts" and ['new', 'edit'].include?(action_name)) ? "false" : "true" %>>
  <div class="container-fluid" style="padding: 0px;">
      <div class="row">
          <% if !user_signed_in? %>
              <div class="col-sm-16">
                  <br/><br/>
                  <%= yield %>
              </div>
          <% else %>
              <div class="col-xl-2" style="background: #B0BEC5; color: #546E7A; position: fixed; height: 100%; top: 0; left: 0;">
                  <%= render partial: "layouts/folders_sidebar" %>
              </div>
              <div class="col-xl-12" style="margin-left: 12.5%; padding-top: 50px;">
                  <nav class="navbar fixed-top navbar-expand-lg navbar-light" style="top: 0; left: 12.5%; right: 12.5%; background: #FAFAFA;">
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                      <% if @site.present? %>
                          <ul class="navbar-nav mr-auto">
                              <li class="<%=(controller_name == "pages" and action_name == "manager") ? "nav-item active" : "nav-item" %>"><%= link_to "Pages", manager_account_site_pages_path(@account, @site), "data-turbolinks"=> false, class:"nav-link" %></li>
                              <% if @folder.present? and @folder.id.present? %>
                                  <% if @folder.vertical.present? and @folder.is_for_stories %>
                                      <li class="<%=(controller_name == "pages" and action_name != "manager") ? "nav-item active" : "nav-item" %>"><%= link_to "Stories", account_site_pages_path(@account, @site, folder_id: @folder.id), class:"nav-link", "data-turbolinks"=> false %></li>
                                  <% end %>
                                  <li class="<%=controller_name == "view_casts" ? "nav-item active" : "nav-item"%>"><%= link_to "Cards", account_site_folder_view_casts_path(@account, @site, @folder), class:"nav-link", "data-turbolinks"=> false %></li>
                              <% end %>
                              <li class="<%=(controller_name == "images") ? "nav-item active" : "nav-item" %>"><%= link_to "Images", account_images_path(@account), "data-turbolinks"=> false, class:"nav-link"  %></li>
                          </ul>
                      <% end %>
                    </div>
                  </nav>
                  <div style="padding: 50px;">
                      <%= yield %>
                  </div>
              </div>
              <div class="col-xl-2" style="position: fixed; height: 100%; top: 0; right: 0; background: #FAFAFA;">
                  <%= render partial: "layouts/header_personal" %>
                  <br/>
                  <%= yield(:filters_sidebar) %>
              </div>
          <% end %>
      </div>
  </div>




  <% config = {} %>
  <% if notice.present? %>
    <% config = {text: notice, notify: "success"} %>
  <% end %>
  <% if alert.present? %>
    <% config = {text: alert, notify: "error"} %>
  <% end %>

  <script type="text/javascript">
    var notice = <%= config.to_json.html_safe %>;
    if (notice.notify) generate_notify(notice);
  </script>
</body>
</html>