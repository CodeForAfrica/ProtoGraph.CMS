<div style="width: 980px; margin-left: auto; margin-right: auto;">
  <% if !user_signed_in? %>
      <div class="ui menu clear">
       <div class="item"> <%= link_to image_tag("logo.png"), root_url %></div>
        <div class="right menu">
        <%= link_to "Features", features_path, "data-turbolinks"=> false, class: "item" %>
      </div>
      </div>
  <% else %>
  <div class="ui menu clear">
    <% if @on_an_account_page %>

    <div class="item"><%= link_to image_tag("logged-in-logo.png"), account_path(@account) %></div>
    <div class="item"><%= link_to @account.username, account_path(@account), style: "font-weight: bold;" %></div>
    <% else %>
    <div class="item"><%= image_tag "logged-in-logo.png" %></div>
    <% end %>
    <div class="right menu">
      <% if @on_an_account_page %>
      <%= link_to "Start writing here", new_account_view_cast_path(@account), "data-turbolinks"=> false, class: "item" %>
      <% end %>
      <div class="ui dropdown pointing item">
        <%= image_tag avatar_url(current_user.email), class: "ui avatar image" %>
        <div class="menu">
          <%= link_to 'Your teams', accounts_path, class: "item" %>
          <div class="divider"></div>
          <%= link_to 'Profile', edit_user_registration_path(@account), class: "item" %>
          <%= link_to "Sign out", destroy_user_session_path, class: "item" %>
        </div>
      </div>
      <% if @on_an_account_page %>
      <div class="ui dropdown pointing item">
        <div class="text">
          <% if @on_an_account_page %>
          <%= image_tag avatar_url(@account.gravatar_email), class: "ui avatar image" %>
          <% end %>
        </div>
        <div class="menu">
          <% if @role.can_account_settings %>
          <%= link_to "Team Settings", edit_account_path(@account), class: "item" %>
          <% end %>
          <% if @role.can_template_design_do or @role.can_template_design_publish %>
          <%= link_to "Template Designers", account_template_cards_path(@account), class: "item" %>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
  <hr style="margin-top: -15px; margin-bottom: 40px; border-top: #EDEDED;"/>
</div>