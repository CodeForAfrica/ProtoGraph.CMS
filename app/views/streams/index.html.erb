    <div class="container">
        <% if !@is_viewcasts_present %>
        <div class="blankslate blankslate-spacious">
          <h3>No cards created yet.</h3>
          <p>You cannot create streams unless you have created cards.</p>
      </div>
      <% else %>
      <% if @streams.first.blank? %>
      <div class="blankslate blankslate-spacious">
          <% if @folder.is_trash %>
            <h3> There are no streams in the recycle bin.</h3>
          <% else %>
            <h3>No streams created yet.</h3>
            <p>Use the [+ Add a stream] button on the top right to search for your first stream.</p>
          <% end %>
      </div>
      <% else %>
      <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>
                    </th>
                    <th>Stream name
                    </th>
                    <th>Number of cards
                    </th>
                    <th>Last updated
                    </th>
                </tr>
            </thead>
            <tbody>
                <% @streams.each do |stream| %>
                <tr>
                    <td style="width: 10%;">
                        <% if stream.updator.present? %>
                            <%= image_tag avatar_url(stream.updator.email), width: "20px" %>
                        <% end %>
                    </td>
                    <td><%= link_to stream.title, [@account, @site, @folder, stream] %>
                    </td>
                    <td><p class="hint"><%= "#{stream.card_count} <span class='hint'>#{'card'.pluralize(stream.card_count)}</span>".html_safe %></p>
                    </td>
                    <td><%= time_ago_in_words(stream.updated_at) %>
                    </td>
                </tr>
                <% end %>
            </tbody>
            <%= paginate @streams, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
        </table>
    </div>
    <% end %>
    <% end %>
</div>
