<% if @streams.first.blank? %>
    <%= image_tag "option-2.png" %>
<% else %>

        <table class="ui very basic table">
            <thead>
              <tr>
                <th>Name</th>
                <th># Cards</th>
                <th class="collapsing">Last modified at</th>
                <th>by</th>
              </tr>
            </thead>
            <tbody>
              <% @streams.each do |stream| %>
                <% if stream.id.present? %>
                    <tr>
                        <td>
                            <%= link_to stream.title.titleize, [@account, @folder, stream] %>
                        </td>
                        <td>
                            <%= "#{stream.card_count} <span class='hint'>#{'card'.pluralize(stream.card_count)}</span>".html_safe %>
                        </td>
                        <td class="hint">
                            <%= "#{time_ago_in_words(stream.updated_at)} ago" %>
                        </td>
                        <td class="hint collapsing">
                            <%= stream.creator.name %>
                        </td>
                        </td>
                    </tr>
                <% end %>
              <% end %>
            </tbody>
        </table>
<% end %>

<%= render partial: "streams/form" %>


<script type="text/javascript">

$(document).on("turbolinks:load", function () {
    $('#formAddButton').on('click',function () {
        $('#new-stream')
          .modal({
            closable: false,
          }).modal('show');
    });

    $('.ui.dropdown').dropdown({
      allowAdditions: true,
    });

});
</script>