<div class="form-inputs">
  <div class="ui grid">
    <div class="one wide column">
      <% if services_attachable.file_url.present? %>
        <i class="checkmark box icon green"></i>
      <% else %>
        <i class="minus square outline icon red"></i>
      <% end %>
    </div>
    <div class="five wide column">
      <label><strong><%= label %></strong></label>
      <div class='hint'>
        <% if services_attachable.file_url.present? %>
          Last updated by <%= services_attachable.updator.name %> <%= time_ago_in_words(services_attachable.updated_at) %> ago.
        <% else %>
          <%= hint %>
        <% end %>
      </div>
    </div>
    <div class="eight wide column" style='word-wrap: break-word;'>
      <% if services_attachable.file_url.present? %>
        <%= link_to services_attachable.file_url, services_attachable.file_url, target: "_black" %>
        &nbsp &nbsp
        </div><div class='one wide column' >
        <%= link_to "<i class='remove circle outline icon red'></i>".html_safe, file_account_services_attachable_path(@account, services_attachable),method: :delete %>
      <% else %>
        <%= simple_form_for(services_attachable, url: upload_file_account_services_attachable_path(@account, services_attachable), method: :put) do |f| %>
          <%= f.error_notification %>

          <div class="form-actions">
            <%= f.input :binary_file, as: :file, label: false, input_html: {"style": "display: none", accept: content_types} %>
            <%= link_to "Browse", "#", class: "browse_file" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>