<% unless (@account.logo_image_id.present? and (@account.users.count > 1 or  @account.permission_invites.count > 0) and @account.folders.count > 2 and @account.view_casts.count > 0) %>
  <div class="row">
    <%= render partial: "accounts/getting_started" %>
  </div>
<% end %>
<div class="row">
  <div class="col-sm-10">
    <% if @activities.count > 0 %>
      <%= render partial: "activities/index" %>
    <% end %>
  </div>
  <div class="col-sm-6">
      <nav class="github-menu">
        <span class="github-menu-heading">
            Folders you contribute to
            <span style="float: right; font-weight: 400;">
                <%= link_to "+ Add", new_account_folder_path(@account) %>
            </span>
        </span>
        <% @folders.each do |folder| %>
            <a href="<%= account_folder_path(@account, folder) %>" class="github-menu-item">
                <%= image_tag "trash-icon.jpg", style: "height: 12px;margin-bottom: 2px;" if folder.is_trash %>
                <%= folder.name.titleize %>
                <span class="count badge badge-pill badge-secondary" style="font-size: 0.81em; font-weight: 200;">
                    <%= folder.view_casts.count + folder.streams.count %>
                </span>
            </a>
        <% end %>
      </nav>

  </div>
</div>