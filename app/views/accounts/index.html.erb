<div class="nine wide column">
  <h1 class="ui header">
    Your accounts
  </h1>
  <br/>
  <div class="ui very relaxed list" style="width: 100% !important;">
    <% @accounts.each do |account| %>
    <div class="item">
      <%= image_tag avatar_url(account.gravatar_email), class: "ui avatar image" %>
      <div class="content">
        <div class="header">
          <%= link_to account.username, account_path(account) %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <br/>
  <div class="ui divider"></div>
  <br/>
  <%= simple_form_for @account do |f| %>
  <%= f.input :username, id: :account_username, hint: "Choose wisely. You cannot change it later." %>
  <%= f.input :gravatar_email, hint: "We use it only for showing your Gravatar avatar" %>
  <%= f.submit class: 'ui button'%>
  <% end %>
</div>