<div class="ten wide column">
  <%= render partial: "templates/header_index" %>
  <table class="ui very basic table">
  <thead>
    <tr>
      <th>Name</th>
      <th class="collapsing">Status</th>
      <th class="collapsing">Publish count</th>
      <th class="collapsing">Updated by</th>
      <th class="collapsing">Updated at</th>
    </tr>
  </thead>

  <tbody>
    <% @template_containers.each do |template_container| %>
      <tr>
        <td><%= link_to template_stream.name, account_template_container_path(@account, template_container) %></td>
        <td><%= template_container.status %></td>
        <td><%= template_container.publish_count %></td>
        <td><%= template_container.updator.name %></td>
        <td><%= time_ago_in_words template_container.updated_at %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="ui dividing right rail" style="min-height: 339px;"></div>
</div>

