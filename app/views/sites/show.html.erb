<div class="row">
    <div class="col-sm-13">
        <div style="margin-left: auto; margin-right: auto; width: 600px;">
            <% if @folders.first.present? %>                
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Workspace
                            </th>
                            <th>#Cards
                            </th>
                            <th>#Stories
                            </th>
                            <th>Updated
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @folders.each do |folder| %>
                            <tr>
                                <td>
                                    <%= image_tag "glyphicons-441-folder-closed.png" %>
                                    &nbsp;
                                    <%= link_to folder_name_(folder).html_safe, account_site_folder_view_casts_path(@account, @site, folder) %>
                                </td>
                                <td class="hint"><%= folder.view_casts.count %>
                                </td>
                                <td class="hint"><%= folder.pages.count %>
                                </td>
                                <td class="hint"><%= image_tag avatar_url(folder.updator.email), class: "rounded" %> <%= time_ago_in_words folder.updated_at %>
                                </td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            <% end %>
        </div>
    </div>
</div>