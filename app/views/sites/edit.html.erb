<div class="row">
    <div class="col-sm-6" style="padding: 0px; margin-left: auto; margin-right: auto;">
        <h1><span style="font-weight: 200;">Site Settings:</span> <%= @site.domain %></h1>
        <br/>
        <h3>Info</h3>
        <hr/>
        <div style="margin-left: 50px;">
            <%= simple_form_for [@account, @site] do |f| %>
              <%= f.error_notification %>
              <%= f.input :name, required: true %>
              <%= f.input :domain, required: true %>
              <%= f.input :description, required: true, hint: "This will be used in footers, search results, and other places." %>
              <%= f.input :primary_language, as: :select, collection: [["English", "English"], ["Hindi", "Hindi"]], include_blank: false %>
              <%= f.input :default_seo_keywords, required: true, hint: "These default keywords will be used on homepage." %>
              <%= f.button :submit, "Save", class: "btn btn-light" %>
            <% end %>
        </div>
        <br/>
        <h3>Theme</h3>
        <hr/>
        <div style="margin-left: 50px;">
            <p>Publication avatar*</p>
            <p class="hint">This works like a user icon and appears in previews of your publication content throughout Medium. It is square and should be at least 60 × 60px in size.</p>
            <p>Publication logo</p>
            <p class="hint">This logo appears at the top of all your publication’s stories. It should have a transparent background, and be at least 600px wide and 72px tall.</p>
            <p>Publication favicon</p>
            <p class="hint">This is used by mobile browsers to represent a page, appearing in browser tabs and similar places. It is square and should be at least 128 × 128px in size.</p>
        </div>
        <br/>
        <div style="margin-left: 50px;">
            <%= simple_form_for [@account, @site] do |f| %>
              <%= f.error_notification %>
              <%= f.input :house_colour, input_html: {type: :color, style: "height: 40px;"}, label: "House Color", hint: "Choose your brand colour. Wherever possible, we will use this colour.", required: true %>
              <%= f.input :reverse_house_colour, input_html: {type: :color, style: "height: 40px;"}, label: "Reverse House Color", hint: "Choose a color that is diagonally opposite from your House Color on the color wheel. All sponsored articles will be colored with Reverse House Color.", required: true %>              
              <%= f.input :font_colour, input_html: {type: :color, style: "height: 40px;"}, label: "Font Color on House Color", required: true %>
              <%= f.input :reverse_font_colour, input_html: {type: :color, style: "height: 40px;"}, label: "Font Color on Reverse House Color", required: true %>
              <%= f.button :submit, "Save", class: "btn btn-light" %>
            <% end %>
        </div>
        <br/>
        <h3>AWS Configuration</h3>
        <hr/>
        <div style="margin-left: 50px;">
            <%= simple_form_for [@account, @site] do |f| %>
                <% if current_user.is_admin_from_pykih and 1 == 2 %>
                    <div class="ui message">
                      <h4>CDN Configuration</h4>
                      <p class="hint">Configure your own CDN. Keep it blank to use default configurations.</p>
                      <%= f.input :cdn_provider,as: :select, collection: ["CloudFront","Akamai"], include_blank: false %>
                      <%= f.input :cdn_id, input_html: {value: (@site.cdn_id == ENV['AWS_CDN_ID'] and @site.cdn_endpoint == ENV["AWS_S3_ENDPOINT"])  ? "" : @site.cdn_id}, label: "CDN Identifier", hint: "Keep blank if using Akamai." %>
                      <%= f.input :cdn_endpoint, as: :string, input_html: {value: (@site.cdn_id == ENV['AWS_CDN_ID'] and @site.cdn_endpoint == ENV["AWS_S3_ENDPOINT"]) ? "" : @site.cdn_endpoint}, label: "CDN Endpoint", hint: "It should be in the format of https://cdn.protograph.pykih.com. Please do not include the trailing backslash." %>
                      <%= f.input :host, input_html: {value: (@site.cdn_id == ENV['AWS_CDN_ID'] and @site.cdn_endpoint == ENV["AWS_S3_ENDPOINT"]) ? "" : @site.host}, as: :string, label: "Host" %>
                      <%= f.input :client_token, input_html: {value: (@site.cdn_id == ENV['AWS_CDN_ID'] and @site.cdn_endpoint == ENV["AWS_S3_ENDPOINT"])? "" : @account.client_token},hint: "Used as Aws Client Access ID for cloudfront."  %>
                      <%= f.input :client_secret, input_html: {value: @site.cdn_id == ENV['AWS_CDN_ID'] ? "" : @site.client_secret}, hint: "Used as Aws Secret Access Key for cloudfront." %>
                      <%= f.input :access_token, input_html: {value: @site.cdn_id == ENV['AWS_CDN_ID'] ? "" : @site.access_token}, hint: "Keep blank if using cloudfront." %>
                    </div>
                <% else %>
                      <% if @site.cdn_id == ENV['AWS_CDN_ID'] and @site.cdn_endpoint == ENV["AWS_S3_ENDPOINT"] %>
                      <div class="ui message" style="padding-left:  0px; padding-right: 0px;">
                        <h1 style="color: #C2002A;">Pending CDN Configuration</h1>
                        <hr/>
                        <p style="color: #C2002A;">Currently, your embeds are running of Pykih's sandbox CDN that is suitable only for testing. Unless explicitly activated, it wont not scale to handle traffic on a live news site. To activate ProtoGraph for live site use, set up your own CDN (Akamai or AWS CloudFront) and point it to <i>protograph.yoursite.com</i> and provide us with tokens and purge API end points.</p>
                        <p style="color: red;">Please contact us at <%=mail_to "team@pykih.com" %>.</p>
                      </div>
                    <% else %>
                      <div class="alert alert-primary" role="alert">
                          <p>You are using a <%= @site.cdn_provider %> CDN. The endpoint is <%= @site.cdn_endpoint %>.</p>
                      </div>
                    <% end %>
                <% end %>
            <% end %>
        </div>
    </div>
</div>