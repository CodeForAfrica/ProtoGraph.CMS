
  <div class="col-sm-6" style="margin-left: auto; margin-right: auto;">
    <%= link_to "Page Builder", manager_account_site_pages_path(@account, @site) %>
    <h1>Navigation for <%= @ref_category.name %></h1>
    <hr/>
    <% if @site_vertical_navigations.first.blank? %>
        <div class="hint">No rows yet</div>
    <% else %>
      <table class="table table-sm table-responsive">
        <tbody>
          <% @site_vertical_navigations.each do |site_vertical_navigation| %>
            <tr>
              <td><%= site_vertical_navigation.name %>
                  <div class="hint">
                      <%= site_vertical_navigation.url %>
                      <% if site_vertical_navigation.launch_in_new_window %>
                          [/]
                      <% end %>
                  </div>
              </td>
              <td><%= link_to 'Remove', account_site_ref_category_site_vertical_navigation_path(@account, @site, @ref_category, site_vertical_navigation), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>

    <br>
    <h1>Vertical URL</h1>
    <hr>

    <%= simple_form_for([@account, @site, @ref_category]) do |f| %>
      <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :vertical_page_url, required: true%>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Save", class: "btn btn-sm btn-secondary" %>
        </div>
    <% end %>
  </div>


<% content_for :filters_sidebar do %>
    <%= simple_form_for(@site_vertical_navigation, url: account_site_ref_category_site_vertical_navigations_path(@account, @site, @ref_category), method: :post) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :site_id, as: :hidden, input_html: {value: @site.id} %>
        <%= f.input :ref_category_vertical_id, as: :hidden, input_html: {value: @ref_category.id} %>
        <%= f.input :name, required: true, minlength: 3 , maxlength: 15 %>
        <%= f.input :url, required: true, minlength: 4 %>
        <%= f.input :launch_in_new_window, label: "&nbsp; Launch in new window".html_safe %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Add", class: "btn btn-sm btn-secondary" %>
      </div>
    <% end %>
<% end %>