<div class="row">
  <div class="col-sm-6" style="margin-left: auto; margin-right: auto;">
      <h1><span style="font-weight: 200;">Site Categories:</span> <%= @site.domain %></h1>
      <br/>
<ul class="nav nav-tabs justify-content-center" style="margin-left: auto; margin-right: auto;">
     
      <li class="nav-item">
        <%= link_to  "Verticals", series_account_site_path(@account,@site), class: "nav-link active" %>
      </li>
      <li class="nav-item">
        <%= link_to  "Intersections", intersection_account_site_path(@account,@site), class: "nav-link #{action_name === 'intersection' ? 'active' : ''}" %>
      </li>
      <li class="nav-item">
        <%= link_to  "Sub Intersections", sub_intersection_account_site_path(@account,@site), class: "nav-link #{action_name === 'sub_intersection' ? 'active' : ''}" %>
      </li>
      <li class="nav-item">
        <%= link_to  "Tags", tag_account_site_path(@account,@site), class: "nav-link #{action_name === 'tag' ? 'active' : ''}" %>
      </li>
    </ul>
    <br>
    <h3>Navigation <span style="font-weight: 200;">in vertical <%= @ref_category.name %></span></h3>
    <br/>

    
    
    

    
    
    
    <% if @site_vertical_navigations.first.blank? %>
        <div class="hint">No rows yet</div>
    <% else %>
              <table class="table table-sm table-responsive">
                <thead>
                  <tr>
                    <th>Ref category vertical</th>
                    <th>Name</th>
                    <th>Url</th>
                    <th>Launch in new window</th>
                    <th>Created by</th>
                    <th>Updated by</th>
                    <th colspan="1"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @site_vertical_navigations.each do |site_vertical_navigation| %>
                    <tr>
                      <td><%= site_vertical_navigation.ref_category_vertical_id %></td>
                      <td><%= site_vertical_navigation.name %></td>
                      <td><%= site_vertical_navigation.url %></td>
                      <td><%= site_vertical_navigation.launch_in_new_window %></td>
                      <td><%= site_vertical_navigation.created_by %></td>
                      <td><%= site_vertical_navigation.updated_by %></td>
                      <td><%= link_to 'Destroy', account_site_ref_category_site_vertical_navigation_path(@account, @site, @ref_category, site_vertical_navigation), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>

    <% end %>
  </div>
  <div class="col-sm-2">
      <%= simple_form_for(@site_vertical_navigation, url: account_site_ref_category_site_vertical_navigations_path(@account, @site, @ref_category), method: :post) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :site_id, as: :hidden, input_html: {value: @site.id} %>
          <%= f.input :ref_category_vertical_id, as: :hidden, input_html: {value: @ref_category.id} %>
          <%= f.input :name, required: true, minlength: 3 , maxlength: 15 %>
          <%= f.input :url, required: true, minlength: 4 %>
          <%= f.input :launch_in_new_window, label: "&nbsp; Launch in new window".html_safe %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Add", class: "btn btn-light" %>
        </div>
      <% end %>
  </div>
</div>