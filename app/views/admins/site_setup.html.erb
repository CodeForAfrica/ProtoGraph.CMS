<%= content_for :page_title do %>
    <li class="breadcrumb-item"><%= link_to "Admin", account_site_admins_path(@account, @site), "data-turbolinks"=> false %></li>
    <li class="breadcrumb-item active" aria-current="page">Admin for Site: <%= @site.domain %></li>
    <li class="breadcrumb-item active" aria-current="page">Setup</li>
<% end %>
<div class="row">
    <div class="col-sm-13">
        <div style="margin-left: auto; margin-right: auto; width: 500px;">
            <%= simple_form_for [@account, @site] do |f| %>
              <%= f.error_notification %>
              <%= f.input :domain, hint: "We recommend using a subdomain p.mysite.com", label: "Custom domain where the site will be hosted" %>
              <%= f.input :seo_name, label: "Publication Name", hint: "We will be using this name for seo purpose only" %>
              <%= f.input :description, hint: "This will be used in footers, search results, and other places." %>
              <%= f.input :primary_language, as: :select, collection: [["English", "English"], ["Hindi", "Hindi"]], include_blank: false %>
              <%= f.input :default_seo_keywords, hint: "These default keywords will be used on homepage.", label: "Default SEO Keywords" %>
              <%= f.input :is_lazy_loading_activated, as: :boolean, hint: "Lazy loading helps in improving page performance by loading content on demand.", label: "&nbsp; Activate lazy loading".html_safe %>
              <%= f.input :created_by, as: :hidden, input_html: {value: current_user.id} %>
              <%= f.input :updated_by, as: :hidden, input_html: {value: current_user.id} %>
              <%= f.input :from_page, as: :hidden, input_html: {value: "site_setup"}%>
              <%= f.button :submit, "Save", class: "btn btn-sm btn-secondary" %>
            <% end %>
            <hr/>
            <p>You can check
            <%= link_to "RSS Feed", "#{@site.cdn_endpoint}/#{@site.stream.cdn_rss_key}", target: "blank"  %> for the whole site here.</p>
            <p>You can download the <%= link_to "Sitemap", "#{@site.cdn_endpoint}/sitemap.xml.gz", target: "blank"  %> for your site.</p>
        </div>
    </div>
	<div class="col-sm-3 help-text">
        <%= image_tag "help.png", style: "float: right; right: 0; top: 0; position: relative;" %>
		<h2>FAQs</h2>
        <p>
            <%= link_to "Which subdomain should I use?", "https://heyproto.freshdesk.com/support/solutions/articles/36000036544-which-subdomain-should-i-use-", target: "_blank"%>
        </p>
        <p>
            <%= link_to "Don't see language of your choice?", "https://heyproto.freshdesk.com/support/solutions/articles/36000031523-is-prototype-multi-lingual-", target: "_blank"%>
        </p>
	</div>
</div>