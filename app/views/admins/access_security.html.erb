<div class="row">
    <div class="col-sm-13">
        <div style="margin-left: auto; margin-right: auto; width: 500px;">
                <br/>
                <br/>
                <h2>Manage members</h2>
                <br/>
                <ul class="nav nav-tabs" style="font-size: 12px;">
                  <li class="nav-item"><%= link_to "Site Team", account_site_permission_invites_path(@account, @site), class: (controller_name == "permission_invites" and action_name == "index") ? "nav-link active" : "nav-link" %>
                  <li class="nav-item"><%= link_to "Account Owners", account_owners_account_admins_path(@account), class: (controller_name == "admins" and action_name == "account_owners") ? "nav-link active" : "nav-link" %>
                  <li class="nav-item"><%= link_to "Security Settings", access_security_account_site_admins_path(@account, @site), class: (controller_name == "admins" and action_name == "access_security") ? "nav-link active" : "nav-link" %>
                </ul>
                <br/>
                <br/>
                <%= simple_form_for [@account, @site] do |f| %>
                  <%= f.error_notification %>
                  <div class="form-inputs">
                    <%= f.input :email_domain, as: :string, hint: "E.g. google.com. Don't use common domains like gmail, outlook, yahoo, etc." %>
                    <%= f.input :sign_up_mode, as: :select, collection: Site::SIGN_UP_MODES.map{|z| [z, z]}, include_blank: false %>
                    <%= f.input :default_role, as: :select, collection: @permission_roles, include_blank: false %>
                    <%= f.input :from_page, as: :hidden, input_html: {value: "access_security"}%>
                    <%= f.button :submit, "Save", class: "btn btn-sm btn-secondary" %>
                  </div>
                <% end %>
        </div>
    </div>
	<div class="col-sm-3 help-text">
        <%= image_tag "help.png", style: "float: right; right: 0; top: 0; position: relative;" %>
		<h2>How do you want members to sign up?</h2>
		<p>Choose to make your team signup process invitation only, or allow anyone with a certain email address format to sign up.</p>
	</div>
</div>