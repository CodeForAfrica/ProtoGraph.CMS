<%= content_for :page_title do %>
        <li class="breadcrumb-item"><%= link_to "Admin", account_site_admins_path(@account, @site), "data-turbolinks"=> false %></li>
        <li class="breadcrumb-item active" aria-current="page">Admin for Site: <%= @site.domain %></li>
        <li class="breadcrumb-item"><%= link_to "Folders", editorial_folders_account_site_admins_path(@account,@site), "data-turbolinks"=> false %></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Folder</li>
      
<% end %>
<div class="row">
    <div class="col-sm-13">
        <div style="margin-left: auto; margin-right: auto; width: 500px;">
            <%= simple_form_for [@account, @site, @folder] do |f| %>
                <%= f.input :name, required: true %>
                <%= f.input :site_id, as: :hidden, input_html: {value: @site.id} %>
                <%= f.input :is_archived, as: :boolean, label: "&nbsp; Is Archived?".html_safe %>
                <% if @site.users.count > 0 %>
                    <%=  f.input :collaborator_lists,  collection: @site.users.pluck(:name, :id), input_html: { class: 'ui search fluid dropdown', multiple: true}, label: "Add Collaborators" %>
                <% end %>
                <%= f.button :submit, "Save", class: "btn btn-sm btn-secondary" %>
            <% end %>
        </div>
    </div>
	<div class="col-sm-3 help-text">
		<%= image_tag "help.png", style: "float: right; right: 0; top: 0; position: relative;" %>
        <h2>Edit Folder</h2>
		<p>Archive folders whose stories you have published. Archived folders are not visible in site any more. You can find them and unarchive them if you need.</p>
	</div>
</div>




<script type="text/javascript">
    $(document).on("turbolinks:load", function () {
        $('.ui.dropdown').dropdown({
            allowAdditions: false,
        });
    });
</script>