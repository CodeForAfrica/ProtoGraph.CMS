<div class="row-fluid" style="background: #fafbfc; ">
  <div class="container" style="padding-left: 0px;">
    <br/>
    <h2 style="margin-bottom: 20px;"><%= @folder.name %> </h2>
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" href="#">Cards</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Streams</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Prepare articles</a>
      </li>
    </ul>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class='four wide column'>
      <h4>

        <span style="float: right;text-align: right">
          <%= link_to '<i class="plus icon"></i>'.html_safe, new_account_folder_view_cast_path(@account, @folder), data: {turbolinks: false} %>
        </span>
      </h4>
      <%= render partial: "view_casts/index" %>
    </div>
    <div class='five wide column'>
      <h4>

        <% if @is_viewcasts_present %>
        <span style="float: right;text-align: right">
          <%= link_to '<i class="plus icon"></i>'.html_safe, new_account_folder_stream_path(@account, @folder) %>
        </span>
        <% end %>
      </h4>
      <%= render partial: "streams/index" %>
    </div>
    <div class='seven wide column'>
      <h4>

        <% if @account.logo_image_id.present? %>
        <span style="float: right;text-align: right">
          <%= link_to '<i class="plus icon"></i>'.html_safe, new_account_folder_article_path(@account, @folder), data: {turbolinks: false} %>
        </span>
        <% end %>
      </h4>
      <%= render partial: "articles/index" %>
    </div>
  </div>
</div>