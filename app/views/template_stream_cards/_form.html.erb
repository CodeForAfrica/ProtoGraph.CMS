<%= simple_form_for([@account, @template_stream, @template_stream_card]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :account_id, as: :hidden, input_html: {value: @account.id } %>
    <%= f.input :template_card_id %>
    <%= f.input :template_stream_id, as: :hidden, input_html: {value: @template_stream.id } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "ui button" %>
  </div>
<% end %>