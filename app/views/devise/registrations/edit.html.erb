<div class="row">
  <div class="col-sm-3">
    <%= render partial: "accounts/sidebar" %>
  </div>
  <div class="col-sm-9">
    <br/>
    <h1>Account</h1>
    <hr/>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <%= f.input :name %>
      <%= f.input :email %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <%= f.input :password, required: true, autocomplete: "off", placeholder: "6 characters minimum.", hint: "(leave blank if you don't want to change it)" %>
      <%= f.input :password_confirmation, autocomplete: "off" %>
      <%= f.input :current_password %>
      <%= f.button :submit, value: "Save" %>
    <% end %>
    <br/>
    <br/>
    <h1>Your API Access Token</h1>
    <hr/>
    <p><%= current_user.access_token %> </p>
  </div>
  <div class="col-sm-4">
    <br/><br/><br/>
    <%= image_tag avatar_url(current_user.email, 200), class: "rounded" %>
    <br/>
    <p class="hint">To change the profile image, register with <a href="http://gravatar.com/" target="_blank">gravatar.com</a> with email ID <%= current_user.email %> and upload a square image there (Twitter DP).</p>
    <br/>
    <br/>
    <% unless current_user.authentications.present? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "Add Twitter Authentication", public_send("#{resource_class.name.downcase}_#{provider.to_s}_omniauth_authorize_path") %><br />
      <% end -%>
      <br/>
      <br/>
    <% else current_user.authentications.present? %>
      <h4>Your Twitter Authentication</h4>
      <table class="table">
        <tbody>
          <% current_user.authentications.each do |a| %>
            <tr>
              <td style="border: 0px;">
                <%= a.provider.capitalize %>
              </td>
              <td style="border: 0px;">
                <%= a.email %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>

  </div>
</div>
