<div class="row">
    <div class="col-sm-6" style="padding: 0px; margin-left: auto; margin-right: auto;">
        <h1>Settings</h1>
        <br/>
        <h3>Profile</h3>
        <hr/>
        <div style="margin-left: 50px;">
            <%= image_tag avatar_url(current_user.email, 200), class: "rounded" %>
            <br/>
            <p class="hint">To change the profile image, register with <a href="http://gravatar.com/" target="_blank">gravatar.com</a> with email ID <%= current_user.email %> and upload a square image there (Twitter DP).</p>
            <%= simple_form_for(@user, html: { method: :put }) do |f| %>
              <%= f.error_notification %>
              <%= f.input :name %>
              <%= f.input :email, label: "Primary Email ID" %>
              <%= f.button :submit, value: "Save", class: "btn btn-light" %>
            <% end %>
            <br/>
        </div>
        <h3>Simplify login options</h3>
        <hr/>
        <div style="margin-left: 50px;">
            <h4 style="margin-bottom: 20px;">Sign in using Social Networks</h4>
            <% unless current_user.authentications.present? %>
              <%- resource_class.omniauth_providers.each do |provider| %>
                <%= link_to "Add Twitter Authentication", public_send("#{resource_class.name.downcase}_#{provider.to_s}_omniauth_authorize_path") %><br />
              <% end -%>
              <br/>
              <br/>
            <% else current_user.authentications.present? %>
              <h4>Your Twitter Authentication</h4>
              <table class="table">
                <tbody>
                  <% current_user.authentications.each do |a| %>
                    <tr>
                      <td style="border: 0px;">
                        <%= a.provider.capitalize %>
                      </td>
                      <td style="border: 0px;">
                        <%= a.email %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            <% end %>
            <h4 style="margin-bottom: 20px;">Sign in with any of your email IDs</h4>
            <table class="table">
                <tbody>
                    <% @user_emails.each do |u| %>
                        <tr>
                            <td style="border: 0px;">
                              <%= u.email %>
                            </td>
                            <td style="border: 0px;text-align: right">
                              <% unless u.is_primary_email %>
                                <%= link_to "Remove", user_email_path(current_user, u), method: :delete %>
                              <% else %>
                                <p>-</p>
                              <% end %>
                            </td>
                        </tr>
                    <% end %>
            </table>
            <%= simple_form_for([current_user, @user_email]) do |f| %>

              <div class="form-inputs">
                <%= f.input :email %>
              </div>

              <%= f.submit "Add", class: "btn btn-light" %>
            <% end %>
        </div>
        <br/>    
        <h3>Password</h3>
        <hr/>
        <div style="margin-left: 50px;">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.error_notification %>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>
              <%= f.input :password, required: true, autocomplete: "off", placeholder: "6 characters minimum.", hint: "(leave blank if you don't want to change it)" %>
              <%= f.input :password_confirmation, autocomplete: "off" %>
              <%= f.input :current_password %>
              <%= f.button :submit, value: "Save", class: "btn btn-light" %>
            <% end %>
        </div>
        <br/>    
        <h3>API</h3>
        <hr/>
        <div style="margin-left: 50px;">
            <p><%= current_user.access_token %> </p>
        </div>
        <br/>
    </div>
</div>