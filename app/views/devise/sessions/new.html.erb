<% if Rails.env.staging? %>
  <div class="row" style="margin-top: 25px;">
    <div class="ui yellow message">
      Please note: This is a staging environment for testing and not for use in production.
    </div>
  </div>
<% end %>
<div class="row" style="margin-top: 100px;">
  <div class="col-sm-8">
    <%= image_tag "icfj.png" %>
    <h1><%=image_tag "_logo_HOME.png", alt: "ProtoGraph.co" %></h1>
    <h2 class="ui big header">
      Tools to help journalists write better stories.
    </h2>
    <br/>
    <p class="lead">Revolutionary cloud-based country management tool for modern tech-based countries. Get your country management efficiency to a whole new level.</p>
  </div>
  <div class="col-sm-8" style="padding-left: 200px;">
    <div style="background: white; padding: 15px;" >
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <%= f.input :email, autofocus: true, placeholder: 'Email', required: true %>
      <%= f.input :password, autocomplete: "off", placeholder: 'Password', required: true  %>
      <% if devise_mapping.rememberable? -%>
      <div class="field">
        <div class="ui checkbox">
          <%= f.input :remember_me, as: :boolean, boolean_style: :inline  %>
        </div>
      </div>
      <% end -%>
      <%= f.button :submit, value: "Sign in" %>
      <% end %>
      <br/>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "I cannot access my account", new_password_path(resource_name) %><br />
      <%= link_to "Didn't receive confirmation token?", new_confirmation_path(resource_name) %><br />
      <% end -%>
    </div>
    <hr/>
    <p>OR</p>
    <%= link_to "Sign up for free", new_registration_path(resource_name), class: "btn btn-outline-primary" %><br />
    <div style="padding: 15px;" >
      <br/>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
