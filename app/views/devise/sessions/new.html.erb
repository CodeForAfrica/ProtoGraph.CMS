
<div class="ui grid" style="margin-top: 51px;">
  <div class="eight wide column">
    <h1 class="ui big header" style="font-size: 4em;">
      Tools to help journalists write better stories.
    </h1>
    <p style="margin-top: 54px; font-family: Garamond; font-size: 1.8em;">
      Create content easily with a WYSIWYG form.
    </p>
  </div>
  <div class="eight wide column" style="padding-left: 200px;">
    <div style="background: white; padding: 15px;" >
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <%= f.input :email, autofocus: true, placeholder: 'Email', required: true %>
      <%= f.input :password, autocomplete: "off", placeholder: 'Password', required: true  %>
      <% if devise_mapping.rememberable? -%>
      <div class="field">
        <div class="ui checkbox">
          <%= f.input :remember_me, as: :boolean, boolean_style: :inline  %>
        </div>
      </div>
      <% end -%>
      <%= f.button :submit, value: "Sign in", class: 'ui button' %>
      <% end %>
      <br/>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "I cannot access my account", new_password_path(resource_name) %><br />
      <%= link_to "Didn't receive confirmation token?", new_confirmation_path(resource_name) %><br />
      <% end -%>
    </div>
    <div class="ui horizontal divider">
      Or
    </div>
    <%= link_to "Sign up for free", new_registration_path(resource_name), class: "ui button huge", style: "background: white; color: black !important; border: 1px solid lightgray;" %><br />
    <div style="padding: 15px;" >
      <br/>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>