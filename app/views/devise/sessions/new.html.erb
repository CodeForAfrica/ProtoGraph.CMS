          <div class="header">
            <%= link_to "toMobJustice", demo_template_card_path(id: @to_mob_justice.slug)%>
          </div>
          <div class="meta">
            <a href="https://www.icfj.org" target="_blank">ICFJ</a>
          </div>
          <div class="description">
            <%= link_to "Structured Journalism: Document incidents of mob lynching.", demo_template_card_path(id: @to_mob_justice.slug) %>
          </div>
        </div>
      </div>
      <div class="card">
