<% if Rails.env.staging? %>
  <div class="ui grid" style="margin-top: 25px;">
    <div class="ui yellow message">
      Please note: This is a staging environment for testing and not for use in production.
    </div>
  </div>
<% end %>
<div class="ui grid" style="margin-top: 51px;">
  <div class="eight wide column">
    <h1 class="ui big header" style="font-size: 4em;">
      Tools to help journalists write better stories.
    </h1>
  </div>
  <div class="eight wide column" style="padding-left: 200px;">
    <div style="background: white; padding: 15px;" >
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <%= f.input :email, autofocus: true, placeholder: 'Email', required: true %>
      <%= f.input :password, autocomplete: "off", placeholder: 'Password', required: true  %>
      <% if devise_mapping.rememberable? -%>
      <div class="field">
        <div class="ui checkbox">
          <%= f.input :remember_me, as: :boolean, boolean_style: :inline  %>
        </div>
      </div>
      <% end -%>
      <%= f.button :submit, value: "Sign in", class: 'ui button' %>
      <% end %>
      <br/>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "I cannot access my account", new_password_path(resource_name) %><br />
      <%= link_to "Didn't receive confirmation token?", new_confirmation_path(resource_name) %><br />
      <% end -%>
    </div>
    <div class="ui horizontal divider">
      Or
    </div>

    <%= link_to "Sign up for free", new_registration_path(resource_name), class: "ui button massive" %><br />

    <div style="padding: 15px;" >
      <br/>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<div class="ui grid" style="margin-top: 150px;">
  <div class="one column row">
    <div class=" column">
      <div class="ui horizontal divider">
      Tools Supported
    </div>
    </div>
  </div>
  <div class="row">
    <div class="ui cards">
      <div class="card">
        <div class="content">
          <%= link_to image_tag("toExplain.png", class: "right floated mini ui image"), demo_template_card_path(id: @to_explain.slug) %>
          <div class="header">
            <%= link_to "toExplain", demo_template_card_path(id: @to_explain.slug)%>
          </div>
          <div class="meta">
            <a href="https://www.icfj.org" target="_blank">ICFJ</a>
          </div>
          <div class="description">
            <%= link_to "Write text explainers once. Reuse across stories.", demo_template_card_path(id: @to_explain.slug) %>
          </div>
        </div>
      </div>

      <div class="card">
