<%= render partial: "template_cards/header" %>
<div class="sixteen wide column">
  <table class="ui very basic table">
  <thead>
    <tr>
      <th>Name</th>
      <th class="collapsing">Status</th>
      <th class="collapsing">Publish count</th>
      <th class="collapsing">Updated by</th>
      <th class="collapsing">Updated at</th>
    </tr>
  </thead>

  <tbody>
    <% @template_streams.each do |template_stream| %>
      <tr>
        <td><%= link_to template_stream.name, account_template_stream_path(@account, template_stream) %></td>
        <td><%= template_stream.status %></td>
        <td><%= template_stream.publish_count %></td>
        <td><%= template_stream.updator.name %></td>
        <td><%= time_ago_in_words template_stream.updated_at %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>