<%= render partial: "template_cards/header" %>
<div class="sixteen wide column">
    <%= simple_form_for([@account, @template_stream]) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
            <%= f.input :account_id, as: :hidden, input_html: {value: @account.id} %>
            <%= f.input :name, hint: "Choose wisely. You cannot change it later." %>
            <%= f.input :elevator_pitch, hint: "Explain in 140 characters what this template is about." %>
            <!--
                TODO AMIT - Restrict elevator pitch to 140 chars in the UI
            -->
        </div>
        <div class="form-actions">
            <br/>
            <%= f.button :submit, "Add", class: "ui button" %>
        </div>
    <% end %>
</div>