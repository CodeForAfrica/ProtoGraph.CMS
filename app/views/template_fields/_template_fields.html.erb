<%= link_to "Add new field", new_template_datum_template_field_path(@template_datum) %>
<div>
  <% @template_fields.each do |template_field| %>
    <div>
      -Name:<%= template_field.name %> Title:<%= template_field.title %> Type:<%= template_field.data_type %>
      <% if template_field.is_req.present? %>
        Required:<%= template_field.is_req %>
      <% end %>
      <% if template_field.enum.present? %>
      Enum:<%= template_field.enum %>
      <% end %>
      <% if template_field.enum_names.present? %>
      Enum Names:<%= template_field.enum_names %>
      <% end %>
      <% if template_field.default.present? %>
        Default:<%= template_field.default %>
      <% end %>
      <% if ["number", "integer"].include?(template_field.data_type) %>
        <% if template_field.min.present? %>
          Min:<%= template_field.min %>
        <% end %>
        <% if template_field.max.present? %>
          Max:<%= template_field.max %>
        <% end %>
        <% if template_field.multiple_of.present? %>
          Multiple Of:<%= template_field.multiple_of %>
        <% end %>
        <% if template_field.ex_min.present? %>
          Exclusive Min:<%= template_field.ex_min %>
        <% end %>
        <% if template_field.ex_max.present? %>
          Exclusive Maximum:<%= template_field.ex_max %>
        <% end %>
      <% elsif template_field.data_type == "string" %>
        <% if template_field.format.present? %>
          Format:<%= template_field.format %>
        <% end %>
        <% if template_field.pattern.present? %>
          Pattern:<%= template_field.pattern %>
        <% end %>
        <% if template_field.min_length.present? %>
          Min Length:<%= template_field.min_length %>
        <% end %>
        <% if template_field.max_length.present? %>
          Max Length:<%= template_field.max_length %>
        <% end %>
      <% end %>
      <%= link_to "Edit", edit_template_datum_template_field_path(@template_datum, template_field) %>
      <%= link_to "Delete", [@template_datum, template_field], method: :delete %>
    </div>
  <% end %>
</div>