<table class="ui very basic table">
  <thead>
    <tr>
      <th>Name</th>
      <th class="collapsing">Status</th>
      <th class="collapsing">Publish count</th>
      <th class="collapsing">Updated by</th>
      <th class="collapsing">Updated at</th>
    </tr>
  </thead>
  <tbody>
    <% @template_cards.each do |template_card| %>
      <tr>
        <td>
          <%= link_to show_lock(template_card.is_public, template_card.name).html_safe, account_template_card_path(@account, template_card) %>
        </td>
        <td><%= template_card.status %></td>
        <td><%= template_card.publish_count %></td>
        <td><%= template_card.updator.name %></td>
        <td><%= time_ago_in_words(template_card.updated_at) %></td>
      </tr>
    <% end %>
  </tbody>
</table>