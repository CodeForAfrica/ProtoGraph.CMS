<%= simple_form_for([@account, @template_card]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :account_id, as: :hidden, input_html: {value: @account.id} %>
    <%= f.input :template_datum_id %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :version %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "ui button" %>
  </div>
<% end %>