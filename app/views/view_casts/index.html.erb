<br/>
<% if !@folder.is_trash %>
<%= link_to '+ Add a card', new_account_site_folder_view_cast_path(@account, @site, @folder), data: {turbolinks: false}, style: "float: right;" %>
<% end %>
<div class="row">
    <div class="col-sm-13">
        
            <div class="page-center-div">
                <div class="btn-group" role="group" aria-label="Basic example">
                  <button type="button" class="btn btn-small btn-secondary active">
                    <%= link_to "Cards", account_site_folder_view_casts_path(@account, @site, @folder) %>
                  </button>
                  <% if @folder.is_for_stories %>
                      <button type="button" class="btn btn-small btn-secondary">
                        <%= link_to "Stories", account_site_stories_path(@account, @site,folder_id: @folder.id) %>
                      </button>
                  <% end %>
                </div>
            </div>
        
        <div style="margin-left: auto; margin-right: auto;">
            <% if @view_casts.first.blank? %>
                <br/>
                <br/>
                <div class="blankslate blankslate-spacious">
                    <% if @folder.is_trash %>
                        <h3>There are no cards in the recycle bin.</h3>
                    <% else %>
                        <h3>No cards created yet.</h3>
                        <p>Use the [+ Add a card] button on the top right.</p>
                    <% end %>
                </div>
            <% else %>
                <div class="row" style="margin: 0px; padding: 0px;">
                    <br/>
                    <%= paginate @view_casts, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
                    <br/>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                </th>
                                <th>
                                </th>
                                <th>Title
                                </th>
                                <th>Card Type
                                </th>
                                <th>Updated by
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @view_casts.each do |d| %>
                                <tr>
                                    <td class="hint">
                                        #<%= d.id.to_s %>
                                    </td>
                                    <td><div class="status-signal status-green"></div>
                                    </td>
                                    <td>
                                        <%= link_to truncate(d.name, length: 45, ommission: ".."), [@account, @site,  @folder,d], "data-turbolinks"=> false %>
                                    </td>
                                    <td class="hint">
                                        <%= d.template_card.name %>
                                    </td>
                                    <td class="hint"><%= image_tag avatar_url(d.updator.email), width: "16px", height: "16px" %> <%= time_ago_in_words(d.updated_at) %>
                                    </td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
                <div style="padding-left: 18px;">
                    <%= paginate @view_casts, theme: 'twitter-bootstrap-4', pagination_class: "pagination-sm" %>
                </div>
            <% end %>
        </div>
    </div>
	<div class="col-sm-3">
        
	</div>
</div>